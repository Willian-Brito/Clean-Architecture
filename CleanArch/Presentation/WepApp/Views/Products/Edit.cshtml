@model Core.Application.DTOs.Products.ProductDTO

@{
    ViewData["Title"] = "Edit Product";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>

<form asp-action="Edit" method="post">

    <div class="form-horizontal">
        <hr />

        <input type="hidden" asp-for="IdProduct" />

        <div class="form-group">

            <label asp-for="Name" class="col-md-2 control-label"></label>

            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group mt-10">

            <label asp-for="Description" class="col-md-2 control-label"></label>

            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group mt-10">

            <label asp-for="Image" class="col-md-2 control-label"></label>

            <div class="col-md-10">
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group mt-10">

            <label asp-for="Price" class="col-md-2 control-label"></label>

            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group mt-10">

            <label asp-for="Stock" class="col-md-2 control-label"></label>

            <div class="col-md-10">
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group mt-10">

            <label asp-for="IdCategory" class="col-md-2 control-label"></label>

            <div class="col-md-10">
                <select asp-for="IdCategory" class="form-control" asp-items="ViewBag.IdCategory"> </select>
            </div>

        </div>

        <div class="form-group mt-10">
            <input type="submit" value="Save" class="btn btn-success" />           
        </div>

    </div>
</form>

<div class="col-md-offset-2 col-md-10 mt-10">
    <a asp-action="Index">Back to List</a>
</div>